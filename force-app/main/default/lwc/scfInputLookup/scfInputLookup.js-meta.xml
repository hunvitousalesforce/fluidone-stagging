<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Custom Lookup</masterLabel>
    <description>A custom lookup input component for screenflow.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="objectApiName" label="Object API Name" type="String" role="inputOnly"/>
            <property name="otherFieldApiName" label="Other Field Api Name" type="String" role="inputOnly"/>
            <property name="extraFieldApiName" label="Extra Field Api Name" type="String" role="inputOnly"/>
            <property name="fieldApiName" label="Field Api Name" type="String" role="inputOnly"/>
            <property name="objectLabel" label="Object Label" type="String" role="inputOnly"/>
            <property name="selectedIconName" label="Icon Name" type="String" role="inputOnly"/>
            <property name="label" label="Label" type="String" role="inputOnly"/>
            <property name="helpText" label="Help Text" type="String" role="inputOnly"/>
            <property name="searchString" label="On Start Search With Key" type="String" role="inputOnly"/>
            <property name="required" label="Required" type="Boolean" role="inputOnly"/>
            <property name="selectedRecordId" label="Selected Record Id" type="String" role="outputOnly"/>
            <property name="exclusiveIds" label="Exclusive Record Ids" placeholder="value1,value2,value3" type="String" description="List of Record Id separates by comma" role="inputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>